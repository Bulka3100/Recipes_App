<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main">


    <LinearLayout
        android:layout_marginBottom="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- как иначе сделать отступ между кнопками -->
        <Button
            style="@style/StyleNavButton"
            android:backgroundTint="@color/category"
            android:layout_marginEnd="@dimen/half_padding"
            android:layout_marginStart="@dimen/main_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:layout_weight="50"
            />

<Button
    style="@style/StyleNavButton"
    android:backgroundTint="@color/chosen"
    android:layout_marginEnd="@dimen/main_padding"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/chosen"
    android:layout_weight="50"
    app:icon="@drawable/ic_heart_empty"
    app:iconGravity="textEnd"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>